<?xml version="1.0"?>
<project name="Snapshot" default="snapshot">

  <description>Snapshot - An Example Using the SchemaCrawler Ant Macro</description>

  <!-- Step 1.
       Define the ant tasks (macros) that come with SchemaCrawler
  -->
  <typedef
    resource="schemacrawler-antlib.xml"
    classpath="../schemacrawler-6.2.jar"/>

  <!-- Step 2.
       Define the classpath to the database driver
  -->
  <path id="db-driver-classpath">
    <fileset dir="..">
      <include name="*.jar"/>
    </fileset>
  </path>

  <!-- Step 3.
       Define an ant task that uses the <schemacrawler> macro
  -->
  <target name="snapshot">

    <property name="outputfile" value="snapshot.txt"/>

    <delete file="${outputfile}"/>

    <schemacrawler
      datasource="hsqldb"
      db-driver-classpath="db-driver-classpath"
      command="verbose_schema,count"
      outputfile="${outputfile}"
      append="true"/>

    <echo message="Snapshot in ${outputfile}"/>

  </target>

</project>
