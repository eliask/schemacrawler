<?xml version="1.0"?>
<project
  name="diagram"
  default="diagram"
  xmlns:ivy="antlib:fr.jayasoft.ivy.ant">

  <description>diagram - Integration of SchemaCrawler with GraphViz.</description>
  <property environment="env" />

  <!-- Step 1.
    Define the ant tasks (macros) that come with SchemaCrawler
  -->
  <typedef
    resource="schemacrawler-integrations-antlib.xml"
    classpath="../schemacrawler-7.5.1.jar" />

  <!-- Step 2.
    Define the classpath to the database driver
  -->
  <path id="db-driver-classpath">
    <fileset dir="..">
      <include name="*.jar" />
    </fileset>
  </path>

  <!-- Step 3.
    Define an ant task that uses the <schemacrawler-diagram> macro
  -->
  <target name="diagram">

    <property
      name="graph-type"
      value="png" />
    <property
      name="outputfile"
      location="schema-diagram.png" />

    <delete file="${outputfile}" />

    <schemacrawler-diagram
      datasource="hsqldb"
      db-driver-classpath="db-driver-classpath"
      command="standard_schema"
    	graph-type="${graph-type}"
      outputfile="${outputfile}" />

    <echo message="Schema diagram is in ${outputfile}" />

  </target>

</project>
