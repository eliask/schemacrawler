<?xml version="1.0"?>
<project
  name="Velocity"
  default="velocity">

  <description>
    Velocity - Integration of SchemaCrawler with Apache Jakarta Velocity.
  </description>
  <property environment="env" />

  <!-- Step 1.
    Define the ant tasks (macros) that come with SchemaCrawler
  -->
  <typedef
    resource="schemacrawler-integrations-antlib.xml"
    classpath="../schemacrawler-6.4.jar" />

  <!-- Step 2.
    Define the classpath to the database driver
  -->
  <path id="db-driver-classpath">
    <fileset dir="..">
      <include name="*.jar" />
    </fileset>
  </path>

  <!-- Step 3.
    Define the classpath to Velocity
  -->
  <path id="velocity-classpath">
    <fileset dir=".">
      <include name="*.jar" />
    </fileset>
  </path>

  <!-- Step 4.
    Get Velocity and dependencies
  -->
  <get
    src="http://www.ibiblio.org/maven/velocity/jars/velocity-1.5.jar"
    dest="velocity-1.5.jar"
    verbose="true"
    usetimestamp="true" />
  <get
    src="http://www.ibiblio.org/maven/log4j/jars/log4j-1.2.9.jar"
    dest="log4j-1.2.9.jar"
    verbose="true"
    usetimestamp="true" />
  <get
    src="http://www.ibiblio.org/maven/commons-collections/jars/commons-collections-3.2.jar"
    dest="commons-collections-3.2.jar"
    verbose="true"
    usetimestamp="true" />
  <get
    src="http://www.ibiblio.org/maven/commons-lang/jars/commons-lang-2.3.jar"
    dest="commons-lang-2.3.jar"
    verbose="true"
    usetimestamp="true" />

  <!-- Step 5.
    Define an ant task that uses the <schemacrawler-velocity> macro
  -->
  <target name="velocity">

    <property
      name="velocity-template"
      value="tables.vm" />
    <property
      name="outputfile"
      value="table-script-by-velocity.sql" />

    <delete file="${outputfile}" />

    <schemacrawler-velocity
      datasource="hsqldb"
      db-driver-classpath="db-driver-classpath"
      velocity-classpath="velocity-classpath"
      command="verbose_schema"
      template="${velocity-template}"
      outputfile="${outputfile}" />

    <echo message="Output is in ${outputfile}" />

  </target>

</project>
