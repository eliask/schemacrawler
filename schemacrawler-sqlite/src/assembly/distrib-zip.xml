<assembly>
  <id>distrib</id>
  <formats>
    <format>zip</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>schemacrawler:schemacrawler:jar</exclude>
        <exclude>schemacrawler:schemacrawler-commandline:jar</exclude>
        <exclude>schemacrawler:schemacrawler-tools:jar</exclude>
        <exclude>schemacrawler:schemacrawler-integrations:jar</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <includes>
        <include>*README*</include>
        <include>*HOW-TO*</include>
        <include>*LICENSE*</include>
        <include>*NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>sqlite.*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>