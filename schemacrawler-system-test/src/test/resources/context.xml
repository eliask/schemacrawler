<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="host" class="java.lang.String">
    <constructor-arg type="java.lang.String">
      <value>192.168.0.100</value>
    </constructor-arg>
  </bean>

  <bean id="MicrosoftSQLServer" class="schemacrawler.schemacrawler.DatabaseConfigConnectionOptions">
    <constructor-arg type="java.lang.String">
      <value>/schemacrawler-sqlserver.config.properties</value>
    </constructor-arg>
    <property name="host" ref="host" />
    <property name="database">
      <value>schemacrawler</value>
    </property>
    <property name="user">
      <value>schemacrawler</value>
    </property>
    <property name="password">
      <value>schemacrawler</value>
    </property>
  </bean>

  <bean id="MySQL" class="schemacrawler.schemacrawler.DatabaseConfigConnectionOptions">
    <constructor-arg type="java.lang.String">
      <value>/schemacrawler-mysql.config.properties</value>
    </constructor-arg>
    <property name="host" ref="host" />
    <property name="database">
      <value>schemacrawler</value>
    </property>
    <property name="user">
      <value>root</value>
    </property>
    <property name="password">
      <value>sualeh</value>
    </property>
  </bean>

  <bean id="Oracle" class="schemacrawler.schemacrawler.DatabaseConfigConnectionOptions">
    <constructor-arg type="java.lang.String">
      <value>/schemacrawler-oracle.config.properties</value>
    </constructor-arg>
    <property name="host" ref="host" />
    <property name="database">
      <value>XE</value>
    </property>
    <property name="user">
      <value>schemacrawler</value>
    </property>
    <property name="password">
      <value>schemacrawler</value>
    </property>
  </bean>

  <bean id="PostgreSQL" class="schemacrawler.schemacrawler.DatabaseConfigConnectionOptions">
    <constructor-arg type="java.lang.String">
      <value>/schemacrawler-postgresql.config.properties</value>
    </constructor-arg>
    <property name="host" ref="host" />
    <property name="database">
      <value>schemacrawler</value>
    </property>
    <property name="user">
      <value>schemacrawler</value>
    </property>
    <property name="password">
      <value>schemacrawler</value>
    </property>
  </bean>

  <bean id="SQLite" class="schemacrawler.schemacrawler.DatabaseConfigConnectionOptions">
    <constructor-arg type="java.lang.String">
      <value>/schemacrawler-sqlite.config.properties</value>
    </constructor-arg>
    <property name="database">
      <value>C:\Users\Sualeh Fatehi\Documents\_Projects\SchemaCrawler\schemacrawler-sqlite\src\test\resources\sc.db
      </value>
    </property>
    <property name="user">
      <value>schemacrawler</value>
    </property>
    <property name="password">
      <value>schemacrawler</value>
    </property>
  </bean>

</beans>
