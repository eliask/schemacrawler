<?xml version="1.0"?>
<project name="Python Integration"
         default="python">

  <description>SchemaCrawler integration with Python.</description>

  <target name="dependencies_download">

    <!--
      Set up Apache Ivy to download dependencies
    -->
    <property name="ivy.install.version" value="2.2.0" />
    <property name="ivy.jar.dir" location=".." />
    <property name="ivy.jar.file" location="${ivy.jar.dir}/ivy.jar" />
    <get src="http://repo1.maven.org/maven2/org/apache/ivy/ivy/${ivy.install.version}/ivy-${ivy.install.version}.jar"
         dest="${ivy.jar.file}"
         usetimestamp="true" />
    <path id="ivy.lib.path">
      <fileset dir="${ivy.jar.dir}" includes="*.jar" />
    </path>
    <taskdef resource="org/apache/ivy/ant/antlib.xml"
             classpathref="ivy.lib.path" />

    <!-- Download dependencies -->
    <retrieve />

  </target>


  <target name="python" depends="dependencies_download">

    <!-- Step 1.
      Define the ant tasks (macros) that come with SchemaCrawler
    -->
    <typedef resource="schemacrawler-antlib.xml"
             classpath="../_schemacrawler/lib/schemacrawler-9.0.jar" />

    <!-- Step 2.
      Define the classpath to the database driver, and Python
    -->
    <path id="schemacrawler-classpath">
      <fileset dir="../_schemacrawler/lib">
        <include name="*.jar" />
      </fileset>
      <fileset dir="./lib">
        <include name="*.jar" />
      </fileset>
    </path>

    <!-- Step 3.
      Use an ant task that uses the <schemacrawler> macro
    -->
    <schemacrawler
      schemacrawler-classpath="schemacrawler-classpath"
      user="sa"
      password=""
      driver="org.hsqldb.jdbcDriver"
      url="jdbc:hsqldb:hsql://localhost:9001/schemacrawler"
      infolevel="maximum"
      command="script"
	  outputformat="tables.py"
      outputfile="PythonOutput.txt"/>
  	
    <echo message="Created output in PythonOutput.txt"/>
  	
  </target>

</project>
