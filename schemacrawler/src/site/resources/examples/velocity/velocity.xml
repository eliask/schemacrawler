<?xml version="1.0"?>
<project
  name="Velocity"
  default="velocity">

  <description>Velocity - Integration of SchemaCrawler with Apache Velocity.</description>
  <property environment="env"/>

  <target name="dependencies_download">

    <!--
      Set up Apache Ivy to download dependencies
    -->
    <property name="ivy.install.version" value="2.1.0" />
    <property name="ivy.jar.dir" location=".." />
    <property name="ivy.jar.file" location="${ivy.jar.dir}/ivy.jar" />
    <get src="http://repo1.maven.org/maven2/org/apache/ivy/ivy/${ivy.install.version}/ivy-${ivy.install.version}.jar"
         dest="${ivy.jar.file}"
         usetimestamp="true" />
    <path id="ivy.lib.path">
      <fileset dir="${ivy.jar.dir}" includes="*.jar" />
    </path>
    <taskdef resource="org/apache/ivy/ant/antlib.xml"
             classpathref="ivy.lib.path" />

    <!-- Download dependencies -->
    <retrieve />

  </target>

  <!-- Step 4.
    Define an ant task that uses the <schemacrawler-velocity> macro
  -->
  <target name="velocity" depends="dependencies_download">

    <!-- Step 1.
      Define the ant tasks (macros) that come with SchemaCrawler
    -->
    <typedef resource="schemacrawler-antlib.xml"
             classpath="../_schemacrawler/lib/schemacrawler-8.4.jar" />

    <!-- Step 2.
      Define the classpath to the database driver, and Apache Velocity
    -->
    <path id="schemacrawler-classpath">
      <fileset dir="../_schemacrawler/lib">
        <include name="*.jar" />
      </fileset>
      <fileset dir="./lib">
        <include name="*.jar" />
      </fileset>
    </path>

    <property
      name="velocity-template"
      location="tables.vm"/>
    <property
      name="outputfile"
      location="table-script-by-velocity.sql"/>

    <delete file="${outputfile}"/>

    <schemacrawler
      datasource="hsqldb"
      schemacrawler-classpath="schemacrawler-classpath"
      command="velocity"
      outputformat="${velocity-template}"
      outputfile="${outputfile}"/>

    <echo message="Output is in ${outputfile}"/>

  </target>

</project>
